{
	"name": "bloom-share-personal",
	"description": "Video sharing backend for Bloom â€” an open-source screen recording app. Powered by Cloudflare Workers, R2, and D1.",
	"cloudflare": {
		"label": "Bloom Share",
		"products": [
			"Workers"
		],
		"categories": [],
		"bindings": {
			"BLOOM_AUTH_TOKEN": {
				"description": "Auth token for uploads from the Bloom macOS app. Generate one with `openssl rand -hex 32`."
			},
			"BLOOM_BUCKET": {
				"description": "R2 bucket for storing uploaded video files."
			},
			"BLOOM_DB": {
				"description": "D1 database for video metadata."
			}
		}
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"hono": "4.11.1",
		"lucide-react": "^0.564.0",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.15.3",
		"@eslint/js": "9.39.1",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"eslint": "9.39.2",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "0.4.24",
		"globals": "16.5.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.48.0",
		"vite": "^6.0.0",
		"wrangler": "4.56.0"
	},
	"private": true,
	"scripts": {
		"build": "tsc -b && vite build",
		"cf-typegen": "wrangler types",
		"check": "tsc && vite build && wrangler deploy --dry-run",
		"deploy": "npm run build && wrangler d1 migrations apply BLOOM_DB --remote && wrangler deploy",
		"dev": "vite",
		"db:migrations:apply": "wrangler d1 migrations apply BLOOM_DB --remote",
		"lint": "eslint ."
	},
	"type": "module"
}
